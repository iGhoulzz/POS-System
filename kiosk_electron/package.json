{
  "name": "pos-v2-kiosk",
  "version": "1.0.0",
  "description": "POS-V2 Kiosk Interface - Electron Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "pos",
    "kiosk",
    "electron",
    "point-of-sale"
  ],
  "author": "POS-V2 Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "sql.js": "^1.14.0"
  },
  "build": {
    "appId": "com.posv2.kiosk",
    "productName": "POS-V2 Kiosk",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourorg/pos-v2.git"
  }
}
